{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "paths": {
      "@root/*": [
        "/*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "index.ts"
  ]
}
